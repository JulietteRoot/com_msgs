<?xml version="1.0" encoding="utf-8"?>
<!-- gÃ¨re les champs de recherche, ce qu'on retrouve dans le "POST"
(cf populateState dans admin/models/messagerie.php)
Sert pour la barre "rechercher / outils de recherche / effacer" -->
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_BANNERS_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string" />
	</fields>
	
	<field
			name="archive"
			type="list"
			label="archive"
			extension="com_msgs"
			description="archive"
			onchange="this.form.submit();"
			default="non_archive" >
			<option value="tous">COM_MSGS_TOUS</option>
			<option value="archives">COM_MSGS_ARCHIVES</option>
			<option value="non_archives">COM_MSGS_NON_ARCHIVES</option>
	</field>
	
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			statuses="*,0,1,2,-2"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="fc.id ASC" >
			<option value="">JGLOBAL_SORT_BY</option>
		</field>
		
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_BANNERS_LIST_LIMIT"
			description="COM_BANNERS_LIST_LIMIT_DESC"
			onchange="this.form.submit();" />
	</fields>
</form>